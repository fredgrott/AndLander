<?xml version="1.0"?>

<project name="mobilebytes theme" default="applyJGrouseDoc">

    <target name="applyJGrouseDoc">
        <echo>Applying sample theme</echo>
        <copy todir="${outputDir}" overwrite="yes">
            <fileset dir="${jGrouseHome}/themes/mobilebytes/css" includes="*.css"></fileset>
        </copy>
        <copy todir="${outputDir}" overwrite="yes">
            <fileset dir="${jGrouseHome}/themes/mobilebytes/img" includes="*"></fileset>
        </copy>
    </target>
</project>
